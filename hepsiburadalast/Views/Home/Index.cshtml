@*@model List<hepsiburadalast.Controllers.HomeViewModel>*@

@model hepsiburadalast.Controllers.HomeViewModel;

@{
    int a = 0;
    ViewData["Title"] = "Home Page";
}
<table class="table table-striped table-dark">
    @{
        <thead>
            <tr>
                <th scope="col">Urun Adı</th>
                <th scope="col">Fotoğraf</th>
                <th scope="col">HB-Sku</th>
                <th scope="col">Kargo Şirketi</th>
                <th scope="col">Stok</th>
                <th scope="col">Fiyat</th>
            </tr>
        </thead>

        <tbody>

            @foreach (var item in Model.Test2.ToList())
            {
                <tr>
                    <td scope="row"> <img src=@Model.Test1.Where(w=>w.hepsiburadaSku==item.hepsiburadaSku).Select(s=>s.image).FirstOrDefault() /> </td>
                    <td scope="row">@item.hepsiburadaSku</td>
                    <td>@item.cargoCompany1</td>
                    <td>@item.availableStock</td>
                    <td>@item.price</td>
                </tr>
            }
        </tbody>
        

    }
</table>